<?php
// Mengonfigurasi database
$host = 'localhost'; // Ganti dengan host Anda
$username = 'root'; // Ganti dengan username database Anda
$password = ''; // Ganti dengan password database Anda
$dbname = 'coffee_shop'; // Ganti dengan nama database Anda

// Membuat koneksi
$conn = new mysqli($host, $username, $password, $dbname);

// Cek koneksi
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Fungsi untuk mengambil data menu berdasarkan kategori
function getMenuByCategory($category) {
    global $conn;

    // Menghindari SQL Injection dengan menggunakan prepared statement
    $sql = "SELECT * FROM menu WHERE category = ?";
    $stmt = $conn->prepare($sql);

    if ($stmt === false) {
        // Jika statement gagal dibuat, tampilkan kesalahan
        die('MySQL prepare error: ' . $conn->error);
    }

    // Bind parameter dan eksekusi query
    $stmt->bind_param("s", $category);

    // Eksekusi statement
    $stmt->execute();

    // Ambil hasilnya
    $result = $stmt->get_result();

    // Mengembalikan hasil sebagai array asosiatif
    $menu = $result->fetch_all(MYSQLI_ASSOC);

    // Menutup statement setelah digunakan
    $stmt->close();

    return $menu;
}

// Menutup koneksi database setelah semua operasi selesai
// $conn->close(); // Biasanya ditutup setelah semua operasi selesai, bisa diaktifkan sesuai kebutuhan

?>
